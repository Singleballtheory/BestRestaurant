@using BestRestaurant.Models;
@model List<BestRestaurant.Models.Cuisine>;

<h1>Cuisines</h1>

@if (Model.Count == 0)
{
  <h3>No Cuisines have been added yet!</h3>
}

<ul>
  @foreach(Cuisine Cuisine in Model)
  {
    <li>@Html.ActionLink($"{Cuisine.Name}", "Details", new { id = Cuisine.CuisineId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new Cuisine", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>